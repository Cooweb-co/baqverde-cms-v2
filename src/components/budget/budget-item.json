      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files"
      ],
      "pluginOptions": {
        "upload": {
          "allowedMimeTypes": [
            "application/pdf"
          ]
        }
      }
    }
  }
}
